        <div class="col-lg-6">
            <form method="POST" action="SendMessage">
                <div class="form-group">
                    <label>Enter Name</label>
                    <input type="text" id="txtName" placeholder="Enter Name" class="form-control" required name="txtName" />
                </div>
                <div class="form-group">
                    <label>Enter Email</label>
                    <input type="Email" id="txtEmail" placeholder="Enter Email" class="form-control" required name="txtEmail" />
                </div>
                <div class="form-group">
                    <label>Enter Mobile</label>
                    <input type="number" id="txtNo" placeholder="Enter Phone" class="form-control" required name="txtNo" />
                </div>


                <div class="form-group">
                    <label>Enter Message</label>
                    <input type="text" id="txtMsg" placeholder="Enter Message" class="form-control" required name="txtMsg" />
                </div>


                <div class="form-group">

                    <input type="submit" value="Send Message" class="btn btn-danger" />
                </div>

            </form>>
        </div>
    </div>

</div>